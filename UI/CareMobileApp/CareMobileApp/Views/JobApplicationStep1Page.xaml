<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CareMobileApp.Views.JobApplicationStep1Page"
             Title="Job Application Wizard"
             NavigationPage.HasBackButton="False">

    <StackLayout Padding="5,5,5,5" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">

        <Label Text="Application Step - I" FontSize="Large" TextColor="Navy" HorizontalOptions="Center"></Label>

        <Image x:Name="profilePhoto" MinimumHeightRequest="320" MinimumWidthRequest="320" WidthRequest="320" HeightRequest="320" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Center"></Image>

        <Label x:Name="LetsTakePhotoLabel" Text="Let's take a Photo!" TextColor="Navy" FontSize="Default" HorizontalOptions="Center"></Label>

        <Button x:Name="NextStepButton" StyleClass="Primary" Text="Next Step" IsVisible="False"></Button>

    </StackLayout>

</ContentPage>